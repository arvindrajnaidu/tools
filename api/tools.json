{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Tools",
        "description": "#### Tools available.\n"
    },
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "host": "paypal.com",
    "basePath": "/api/v1",
    "paths": {
        "/tools": {
            "get": {
                "x-swagger-router-controller": "tools",
                "operationId": "getTools",
                "tags": ["/"],
                "description": "Get the tools available for the merchant",
                "parameters": [
                    {
                        "name": "favorite",
                        "in": "query",
                        "description": "Retrieve favorites",
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get the tools available",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Tool"
                            }
                        }
                    },
                    "default": {
                        "description": "error payload",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }                    
                }
            },
            "post": {
                "x-swagger-router-controller": "tools",
                "operationId": "updateTools",
                "tags": [
                    "/"
                ],
                "description": "Update the favorite tools for a merchant",
                "parameters": [
                    {
                        "name": "tools",
                        "in": "body",
                        "description": "Update the favorite tools for a merchant",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/FavoriteTool"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Update the favorite tools for a merchant",
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    "default": {
                        "description": "error payload",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/tools/content": {
            "get": {
                "x-swagger-router-controller": "content",
                "operationId": "getContentForTools",
                "tags": ["/"],
                "description": "Get the content for tools",
                "responses": {
                    "200": {
                        "description": "Get the tools available",
                        "schema": {
                            "type": "array",
                            "items" : {
                                
                            }
                        }
                    },
                    "default": {
                        "description": "error payload",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }                    
                }
            }
        }    
    },
    "definitions" : {
        "Tool": {
            "required": [
                "id",
                "key"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                },
                "active": {
                    "type": "boolean"
                },
                "favorite": {
                    "type": "boolean"
                }
            }
        },
        "FavoriteTool": {
            "required": [
                "id",
                "key",
                "order",
                "favorite"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32"
                },
                "key": {
                    "type": "string"
                },
                "order": {
                    "type": "integer",
                    "format": "int32"
                },
                "favorite": {
                    "type": "boolean"
                }
            }
        },
        "ErrorModel": {
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}